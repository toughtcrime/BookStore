@model BookStore.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Logging";
};


<head>
    <link rel="stylesheet" href="~/css/Registration.css" />
</head>
<div class="container">
    <form id="signup" method="post" asp-controller="AccountController" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <h3 class="registerTitle">Login</h3>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div>
                <label type="text" asp-for="UserName"></label>
            </div>

            <input type="text" asp-for="UserName" placeholder="Example" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="form-group">
            <div><label asp-for="Password"></label></div>
            <input asp-for="Password" placeholder="••••••" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="RememberMe"></label><br />
            <input asp-for="RememberMe" />
        </div>

        <div class="row">
            <div class="col-md"></div>
            <div class="col-md"><input type="submit" class="vertical-center">Login</div>
            <div class="col-md"></div>
        </div>
    </form>
</div>