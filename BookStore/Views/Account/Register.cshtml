@model BookStore.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "BS - Registration";
}

<head>
    <link rel="stylesheet" href="~/css/Registration.css"/>
</head>
<div class="container">
    <form id="signup" method="post" asp-controller="AccountController" asp-action="Register">
        <h3 class="registerTitle">Registration</h3>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div><label asp-for="Email"></label></div>
            <input asp-for="Email" placeholder="example@mail.com" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <div>
                <label type="text" asp-for="UserName"></label>
            </div>

            <input type="text" asp-for="UserName" placeholder="Some_username" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="form-group">
            <div><label asp-for="Password"></label></div>
            <input asp-for="Password" placeholder="••••••" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <div><label asp-for="ConfirmPassword"></label></div>
            <input asp-for="ConfirmPassword" placeholder="••••••" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>

       
        <div class="row">
            <div class="col-md"></div>
            <div class="col-md"><input type="submit" value="Register"/></div>
            <div class="col-md"></div>
        </div>
    </form>
</div>
        